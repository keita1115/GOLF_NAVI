<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-2'>
      <h3 class="my-4 mt-5">user一覧</h3>

       <table class="table table">
            <thead>
              <tr>
                <th>UserID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
              </tr>
            </thead>
          <tbody>
           <% @users.each do |user| %>
             <tr>
               <td>
                 <%= user.id %>
               </td>
               <td>
                 <%= link_to admin_user_path(user) do%>
                   <%= user.name %>
                 <% end %>
               </td>
               <td><%= user.email%></td>
                 <% if user.is_deleted? %>
               <th class = "text-success">
                 退会済
               </th>
                 <%else%>
               <th class = "text-danger">
                 会員
               </th>
                 <% end %>
             </tr>
           <% end %>
          </tbody>
       </table>
        <div class="mx-auto" style="width: 300px;"><%= paginate @users, theme: 'twitter-bootstrap-4'%></div>
    </div>
  </div>
</div>