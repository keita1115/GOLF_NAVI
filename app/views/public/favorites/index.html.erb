<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <h3 class="my-4 mt-5">お気に入り一覧</h3>
      <div class="contents" style="display:flex; flex-wrap:wrap;">
        <% @favorites.each do |favorite| %>
          <div class="mr-4 mt-4">
            <%= link_to course_path(favorite.course_id) do %>
              <%= image_tag favorite.course.image, size:"150x120" %>
            <% end %>
            <p class="text-center"><strong><%= favorite.course.title %></strong></p>
          </div>
        <% end %>
      </div>
      <p class="text-center"><strong> <%= paginate @favorites %></strong></p>
    </div>
  </div>
</div>
 
