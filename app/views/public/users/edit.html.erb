<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>ユーザー情報編集</h2>
        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <label for="user_name">名前</label><br>
            <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"名前"%>
          </div>
          <tr class="form-group">
           <th><%= f.label :"メールアドレス"%></th>
           <th><%= f.email_field :email,autofocus: true, class: "form-control user.email" %></th>
          </tr>
          <%= f.submit "更新" %>
        <% end %>
    </div>
  </div>
</div>