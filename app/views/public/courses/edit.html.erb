<div class="container">
  <div class="row">
    <div class="col-md-8 offset-2">
      <h3 class="my-4 mt-5">ゴルフ場編集</h3>

      <!--form_with記述-->
      <%= form_with model: @course, url: course_path(@course), method: :patch, local: true do |f| %>

  <!--商品画像-->
  <div class="field text-center mt-4">
    <%= f.label :"ゴルフ場画像" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <!--商品名-->
  <div class="field text-center mt-4">
    <%= f.label :"ゴルフ場名", class: "mr-3" %>
    <%= f.text_field :title %>
  </div>

  <!--商品説明-->
  <div class="field text-center mt-4">
    <%= f.label :"スコア", class: "mr-3" %>
    <%= f.text_field :score %>
  </div>

  <div class="field text-center mt-4">
    <%= f.label :"ゴルフ場概要", class: "mr-3" %>
    <%= f.text_area :body %>
  </div>

  <!--ジャンル--><!--Q:ジャンルを選択するフォームがわからない-->
  <div class="field text-center mt-4">
    <%= f.label :"エリア", class: "mr-3" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </div>

  <!--変更ボタン-->
  <div class="actions text-center mt-4">
    <%= f.submit "変更を保存", class: "btn btn-primary" %>
  </div>
<% end %>
